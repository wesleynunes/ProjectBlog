@model ProjectBlog.Models.Post

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
        <div >           
            <!-- Title -->
            <h1 class="mt-4">@Html.DisplayFor(model => model.Title)</h1>
            <hr/>

            <!-- Author -->
            <p class="lead">
                Por: <a>@Html.DisplayFor(model => model.Users.Name)</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Postato @Html.DisplayFor(model => model.Create_time)</p>

            <hr>

            <!-- Preview Image -->
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <center>
                    <img class="card-img-top" src="@Url.Content(Model.Image)" alt="Image" style="width:750px;height:300px;max-width: 100%" />
                </center>
                
            }
            <hr>

            <!-- Post Content -->
            <h3>@Html.DisplayNameFor(model => model.Content)</h3>
            <p>@Html.Raw(Model.Content)</p>

            <hr>
            <br/>

            <div>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Editar", "Edit", new { id = Model.PostId }, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Voltar", "Index", new { }, new { @class = "btn btn-secondary" })
            </div>

            <br/>
      </div>               
   

</div>




