@model ProjectBlog.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["RegistrationMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["RegistrationMessage"]
    </div>
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm())
            {
                <h4>Usar uma conta local para efetuar login.</h4>
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.UrlRetorno)
                <div class="form-group row">
                    @Html.ValidationMessageFor(model => model.ActiveUser, "", new { @class = "text-danger" })  @*Messagem de validação de usuario Desativado*@
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Usuário</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Senha</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div for="inputEmail3" class="col-sm-2 col-form-label">
                        <input type="submit" value="Efetuar login" class="btn btn-outline-primary" />
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrar-se como novo usuário", "Register", "User")
                </p>
            }
        </section>
    </div>
</div>

